@model ProyectoFinalSalones.Salone

@{
    ViewBag.Title = "Rentar";
}

<h2>Rentar</h2>

@using (Html.BeginForm("Rentar", "Salones", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

